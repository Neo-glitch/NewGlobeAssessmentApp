<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pupil_image"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:contentDescription="@string/pupil_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_error_image"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pupil_details_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedHeight="true"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/pupil_image"
            app:layout_constraintBottom_toBottomOf="@id/pupil_image"
            app:layout_constraintStart_toEndOf="@id/pupil_image"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/pupil_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@style/Bridge.TextAppearance.Headline2"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="John Doe Smith" />

            <ImageView
                android:id="@+id/country_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/pupil_image"
                android:scaleType="fitXY"
                android:src="@drawable/ic_country"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pupil_name_tv" />

            <TextView
                android:id="@+id/pupil_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/country_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/country_icon"
                app:layout_constraintTop_toTopOf="@+id/country_icon"
                tools:text="John Doe Smith" />

        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
